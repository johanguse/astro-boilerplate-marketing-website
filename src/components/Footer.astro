---
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Separator } from "@/components/ui/separator";
import { translateFor, getRelativeLocalePath } from "@/i18n/utils";
import { SITE } from "@/config";
import { SOCIALS } from "@/constants";

const currentLocale = Astro.currentLocale;
const t = translateFor(currentLocale);
const currentYear = new Date().getFullYear();

const productLinks = [
  { label: "Features", href: "/features" },
  { label: "Pricing", href: "/pricing" },
  { label: "Documentation", href: "/blog" },
  { label: "API Reference", href: "/api" },
];

const companyLinks = [
  { label: t("about"), href: "/about" },
  { label: "Blog", href: "/blog" },
  { label: "Careers", href: "/careers" },
  { label: "Contact", href: "/contact" },
];

const legalLinks = [
  { label: "Privacy", href: "/privacy" },
  { label: "Terms", href: "/terms" },
  { label: "Security", href: "/security" },
  { label: "GDPR", href: "/gdpr" },
];
---

<footer class="border-t bg-muted/30">
  <!-- Main Footer Content -->
  <div class="container py-16 md:py-20">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-5">
      <!-- Brand Column -->
      <div class="lg:col-span-2">
        <a href={getRelativeLocalePath(currentLocale, "/")} class="flex items-center space-x-2 font-bold text-xl mb-4">
          <span class="text-primary">⚡</span>
          <span>{t("site.title")}</span>
        </a>
        <p class="text-muted-foreground mb-6 max-w-sm">
          {t("site.desc")}
        </p>
        
        <!-- Newsletter -->
        <div class="space-y-2">
          <p class="text-sm font-medium">Stay updated</p>
          <form class="flex gap-2">
            <Input type="email" placeholder="Enter your email" className="max-w-xs rounded-xl" client:load />
            <Button type="submit" className="rounded-xl" client:load>Subscribe</Button>
          </form>
          <p class="text-xs text-muted-foreground">
            Get the latest features and updates. Unsubscribe anytime.
          </p>
        </div>
      </div>

      <!-- Product Column -->
      <div>
        <h3 class="font-semibold mb-4">Product</h3>
        <ul class="space-y-3">
          {productLinks.map(link => (
            <li>
              <a
                href={getRelativeLocalePath(currentLocale, link.href)}
                class="text-sm text-muted-foreground hover:text-foreground transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company Column -->
      <div>
        <h3 class="font-semibold mb-4">Company</h3>
        <ul class="space-y-3">
          {companyLinks.map(link => (
            <li>
              <a
                href={getRelativeLocalePath(currentLocale, link.href)}
                class="text-sm text-muted-foreground hover:text-foreground transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Legal Column -->
      <div>
        <h3 class="font-semibold mb-4">Legal</h3>
        <ul class="space-y-3">
          {legalLinks.map(link => (
            <li>
              <a
                href={getRelativeLocalePath(currentLocale, link.href)}
                class="text-sm text-muted-foreground hover:text-foreground transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>

  <Separator client:load />

  <!-- Bottom Footer -->
  <div class="container py-6">
    <div class="flex flex-col items-center justify-between gap-4 md:flex-row">
      <p class="text-sm text-muted-foreground">
        © {currentYear} {SITE.author}. All rights reserved.
      </p>
      
      <!-- Social Links -->
      <div class="flex items-center gap-4">
        {SOCIALS.slice(0, 3).map(social => (
          <a
            href={social.href}
            target="_blank"
            rel="noopener noreferrer"
            class="text-muted-foreground hover:text-foreground transition-colors"
            aria-label={social.linkTitle(t)}
          >
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              {social.name === "Github" && (
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              )}
              {social.name === "X" && (
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              )}
              {social.name === "LinkedIn" && (
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              )}
            </svg>
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>
