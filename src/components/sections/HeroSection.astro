---
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";

interface Props {
  badge?: string;
  title: string;
  subtitle: string;
  primaryCta?: string;
  primaryCtaHref?: string;
  secondaryCta?: string;
  secondaryCtaHref?: string;
}

const {
  badge,
  title,
  subtitle,
  primaryCta = "Get Started",
  primaryCtaHref = "#",
  secondaryCta = "Learn More",
  secondaryCtaHref = "#",
} = Astro.props;
---

<section class="relative overflow-hidden py-20 md:py-32">
  <!-- Gradient mesh background -->
  <div class="absolute inset-0 bg-gradient-mesh -z-10"></div>
  
  <div class="container max-w-6xl">
    <div class="flex flex-col items-center text-center animate-slide-up">
      {badge && (
        <Badge variant="secondary" className="mb-6 px-4 py-2 text-sm font-medium" client:load>
          {badge}
        </Badge>
      )}
      
      <h1 class="text-5xl font-bold tracking-tight sm:text-6xl md:text-7xl lg:text-8xl max-w-5xl bg-gradient-to-br from-foreground via-foreground to-foreground/70 bg-clip-text text-transparent mb-6">
        {title}
      </h1>
      
      <p class="text-xl text-muted-foreground max-w-3xl mb-10 leading-relaxed">
        {subtitle}
      </p>
      
      <div className="flex flex-col sm:flex-row gap-4 items-center">
        <Button size="lg" className="px-8 py-6 text-lg rounded-2xl shadow-soft-lg hover:shadow-soft-xl transition-all duration-300" client:load>
          <a href={primaryCtaHref} className="no-underline">
            {primaryCta}
          </a>
        </Button>
        
        <Button variant="outline" size="lg" className="px-8 py-6 text-lg rounded-2xl shadow-soft hover:shadow-soft-lg transition-all duration-300" client:load>
          <a href={secondaryCtaHref} className="no-underline">
            {secondaryCta}
          </a>
        </Button>
      </div>
      
      <!-- Trust indicators -->
      <div class="mt-16 flex flex-col items-center gap-4">
        <p class="text-sm text-muted-foreground">Trusted by teams at</p>
        <div class="flex flex-wrap justify-center gap-8 opacity-50 grayscale">
          <slot name="logos" />
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Enhance gradient text for Safari */
  @supports (-webkit-background-clip: text) {
    h1 {
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
  }
</style>
